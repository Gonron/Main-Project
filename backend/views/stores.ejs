<ol class="breadcrumb">
	<li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
	<li class="breadcrumb-item active">Stores</a></li>
</ol>
<div class="col">
	<% include ./partials/messages %>
	<h2 class="mt-4">
		Stores		
		<a href="/stores/addStore" class="btn btn-success">
		Add Store
		</a>
	</h2>
	<table class="table table-hover" id="myTable">
		<thead>
			<tr>
				<th>Number</th>
				<th>Name</th>
				<th>Address</th>
				<th>Phone</th>
				<th>Tools</th>
			</tr>
		</thead>
		<tbody>
			<% stores.map( s => { %>
			<tr>
				<td>
					<a href="/stores/storenum=<%- s.storeInfo.storeNum -%>"
						><%= s.storeInfo.storeNum %>
					</a>
				</td>
				<td><%= s.storeInfo.storeName %></td>
				<td>
					<%= s.storeInfo.address %>
					<br />
					<%= `${s.storeInfo.zipCode} ${s.storeInfo.city}` %>
				</td>
				<td><%= s.storeInfo.phone %></td>
				<td>
						<a href="/stores/storenum=<%- s.storeInfo.storeNum -%>/update">
							<i class="fas fa-user-edit" style="color: cornflowerblue;"></i>
						</a>
						<a
							href="/stores/storenum=<%- s.storeInfo.storeNum -%>/delete"
							onclick="return confirm('Are you sure you want to delete <%= s.storeInfo.storeName %>');"
						>
							<i class="fas fa-user-times"></i>
						</a>
				</td>
			</tr>
			<% }) %>
		</tbody>
	</table>
</div>
