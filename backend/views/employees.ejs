<div class="col">
	<% include ./partials/messages %>
	<h2 class="mt-4">
		Employees
		<a href="/employees/addEmployee" class="btn btn-success">
			Add Employee
		</a>
	</h2>
	<ul class="nav nav-tabs">
		<li class="nav-item">
			<a class="nav-link active" data-toggle="tab" href="#all">Alle Konsulenter</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" data-toggle="tab" href="#service">Service Konsulenter</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" data-toggle="tab" href="#sales">Salgs Konsulenter</a>
		</li>
	</ul>
	<div id="myTabContent" class="tab-content">
		<div class="tab-pane fade show active" id="all">
			<table class="table table-hover" id="myTable">
				<thead>
					<tr>
						<th>Name</th>
						<th>Title</th>
						<th>Email</th>
						<th>Address</th>
						<th>Tools</th>
					</tr>
				</thead>
				<tbody>
					<% employees.map( emp => { %>
					<tr>
						<td><a href="/employees/emp_id=<%- emp._id -%>"><%= emp.name %></a></td>
						<td><%= emp.title %></td>
						<td><%= emp.email %></td>
						<td><%= emp.address %></td>
						<td>
							<a href="/employees/emp_id=<%- emp._id -%>/update">
								<i class="fas fa-user-edit" style="color: cornflowerblue;"></i>
							</a>
							<a
								href="/employees/emp_id=<%- emp._id -%>/delete"
								onclick="return confirm('Are you sure you want to delete <%= emp.name %>');"
							>
								<i class="fas fa-user-times"></i>
							</a>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>

		<div class="tab-pane fade" id="service">
			<table class="table table-hover" id="myTable">
				<thead>
					<tr>
						<th>Name</th>
						<th>Title</th>
						<th>Email</th>
						<th>Address</th>
						<th>Tools</th>
					</tr>
				</thead>
				<tbody>
					<% employees.map( emp => { %> <% if(emp.title == 'Service Konsulent') {%>
					<tr>
						<td><a href="/employees/emp_id=<%- emp._id -%>"><%= emp.name %></a></td>
